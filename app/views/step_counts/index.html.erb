<p id="notice"><%= notice %></p>

<h1>Listing Step Counts</h1>

<table>
  <thead>
    <tr>
      <th>Taken on</th>
      <th>Step count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @step_counts.each do |step_count| %>
      <tr>
        <td><%= step_count.taken_on %></td>
        <td><%= step_count.step_count %></td>
        <td><%= link_to 'Show', step_count %></td>
        <td><%= link_to 'Edit', edit_step_count_path(step_count) %></td>
        <td><%= link_to 'Destroy', step_count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

